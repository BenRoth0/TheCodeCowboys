@model PromptQuest.Models.PlayerModel

@{
    ViewData["Title"] = "Character Creation";
}

<div class="container-fluid BackgroundColorDark text-center" style="padding:25px;">
    <div style="border: 2px solid white; border-radius: 15px; padding:15px;">
        <img src="~/images/PlaceholderPlayerPortrait.png" alt="Default Player Portrait" style="border: 1px solid white; width: 392px; height:392px;">"
        <div class="row-cols-8 justify-content-center text-center">
            <form asp-controller="Game" asp-action="CreateCharacter" method="post">
                <div class="form-group row">
                    <label asp-for="Name" class="col-lg-4 col-form-label text-lg-end" style="padding:5px; color: white;">Name</label>
                    <div class="col-lg-4">
                        <input type="text" minlength="1" maxlength="25" class="form-control" id="name" name="name" placeholder="Enter Your Character's Name" />
						<button type="submit" class="MenuButton" style="background-color:green; padding:5px;">Start Adventure</button>  @*Make button green*@
					</div>
                </div>
                
		    </form>
		</div>
    </div>
</div>