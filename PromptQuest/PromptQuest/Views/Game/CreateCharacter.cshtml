@model PromptQuest.Models.PlayerModel

@{
    ViewData["Title"] = "Character Creation";
}

<div class="row container-fluid BackgroundColorDark text-center" style="padding:25px;">
    <div class="col-lg-6 offset-3" style="border: 2px solid white; border-radius: 150px; padding:25px;">
        <img src="~/images/PlaceholderPlayerPortrait.png" alt="Default Player Portrait" style="border: 2px solid white; width: 392px; height:392px;">"
        <div class="row justify-content-center text-center" style="width:100%;">
            <form asp-controller="Game" asp-action="CreateCharacter" method="post">
                <div class="form-group row offset-1">
                    <label asp-for="Name" class="col-lg-2 col-form-label text-lg-end" style="padding:5px; color: white;">Name</label>
                    <div class="col-lg-9" style="width:60%;">
                        <div class="row-cols-1">
							<input type="text" minlength="1" maxlength="25" class="form-control" id="name" name="name" style="padding:5px; background-color:transparent; border: 2px solid white;" placeholder="Enter Character's Name" />
                        </div>
                        <div class="row-cols-3">
							<button type="submit" class="MenuButton" style="background-color:darkgreen; padding:5px;">Start Adventure</button>
                        </div>
					</div>
                </div>
		    </form>
		</div>
    </div>
</div>